{
  "type": "module",
  "scripts": {
    "start": "npm run build && vite preview --config ./config/build/vite.config.ts",
    "dev": "vite --config ./config/build/vite.config.ts",
    "build": "tsc -b && vite build --emptyOutDir --config ./config/build/vite.config.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:types": "tsc --noEmit",
    "predeploy": "npm run build",
    "prepare": "husky",
    "deploy": "gh-pages -d dist"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "@wessberg/di": "^2.1.0",
    "@wessberg/di-compiler": "^4.0.1",
    "classnames": "^2.5.1",
    "localforage": "^1.10.0",
    "nanoevents": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup-plugin-ts": "^3.4.5",
    "typescript": "^5.6.2",
    "vite": "^5.4.9",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "gh-pages": "^6.2.0",
    "husky": "^9.1.6",
    "vitest": "^2.1.2"
  }
}
